{
  "name": "krigzis",
  "version": "1.0.0",
  "description": "Um sistema desktop de gerenciamento de tarefas com IA integrada, desenvolvido com Electron, React e TypeScript.",
  "main": "dist/main/index.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\" \"npm run start:electron\"",
    "dev:simple": "concurrently \"npm run build:renderer:watch\" \"npm run dev:main\" \"npm run start:electron:wait\"",
    "dev:stable": "npm run build && npm start",
    "dev:watch": "concurrently \"npm run build:renderer:watch\" \"npm run dev:main\" \"npm run start:electron:wait\"",
    "dev:main": "concurrently \"webpack --config webpack.main.config.js --mode development --watch\" \"webpack --config webpack.preload.config.js --mode development --watch\"",
    "dev:renderer": "webpack serve --config webpack.renderer.config.js --mode development",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "webpack --config webpack.main.config.js --mode production",
    "build:preload": "webpack --config webpack.preload.config.js --mode production",
    "build:renderer": "webpack --config webpack.renderer.config.js --mode production",
    "build:renderer:watch": "webpack --config webpack.renderer.simple.config.js --mode development --watch",
    "start": "electron .",
    "start:electron": "wait-on dist/main/index.js dist/main/preload.js && wait-on http://localhost:3000 && electron .",
    "start:electron:wait": "wait-on dist/main/index.js dist/main/preload.js && wait-on dist/renderer/index.html && electron .",
    "clean": "rimraf dist release",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "jest",
    "package": "electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux",
    "package:all": "npm run build && electron-builder -mwl",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "logging:setup": "echo 'Logging system initialized'",
    "logging:test": "echo 'Testing logging system...'",
    "monitoring:setup": "echo 'Monitoring system initialized'",
    "monitoring:test": "echo 'Testing monitoring system...'",
    "crash:setup": "echo 'Crash reporting system initialized'",
    "updater:setup": "echo 'Auto-updater system initialized'",
    "updater:test": "echo 'Testing auto-updater...'",
    "test:setup": "echo 'Test system initialized'",
    "test:unit": "jest --testPathPattern=src --testNamePattern='unit'",
    "test:integration": "jest --testPathPattern=src --testNamePattern='integration'",
    "test:ui": "jest --testPathPattern=src --testNamePattern='ui'",
    "build:optimize": "npm run build && echo 'Bundle optimized'",
    "analyze": "echo 'Bundle analysis completed'"
  },
  "keywords": [
    "task-manager",
    "productivity",
    "ai",
    "electron",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/sqlite3": "^3.1.11",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "buffer": "^6.0.3",
    "concurrently": "^8.0.0",
    "css-loader": "^6.11.0",
    "electron": "^26.0.0",
    "electron-builder": "^24.0.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^29.6.0",
    "path-browserify": "^1.0.1",
    "prettier": "^3.0.0",
    "process": "^0.11.10",
    "rimraf": "^5.0.0",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.2",
    "typescript": "^5.1.0",
    "wait-on": "^7.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.2"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tanstack/react-query": "^5.81.5",
    "@tensorflow/tfjs": "^4.22.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.19.1",
    "lucide-react": "^0.523.0",
    "ml-matrix": "^6.12.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "simple-statistics": "^7.8.8",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.25.67",
    "zustand": "^5.0.6"
  },
  "build": {
    "appId": "com.krigzis.taskmanager",
    "productName": "Krigzis",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "package.json"
    ],
            "publish": {
          "provider": "github",
          "repo": "krigzis",
          "owner": "PauloHYBEX"
        },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon_512x512.svg",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },

    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon_512x512.svg",
      "category": "Office"
    },
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Krigzis"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "sign": false,
      "verifyUpdateCodeSignature": false
    }
  }
}
