{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "moduleDetection": "force",
    "allowImportingTsExtensions": false,
    "skipLibCheck": true,
    "outDir": "./dist/renderer",
    "declaration": true,
    "emitDeclarationOnly": false,
    "types": ["node", "react", "react-dom"]
  },
  "include": [
    "src/renderer/**/*",
    "src/shared/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
} 